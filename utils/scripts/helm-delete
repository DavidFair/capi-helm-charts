#!/usr/bin/env bash

#####
# Wrapper around "helm delete" that considers the delete successful if
#Â the release does not exist
#####

RELEASE=$1
shift

NAMESPACE_ARG=
TIMEOUT_ARG=
HELM_ARGS=

while :; do
    case $1 in
        --help)
            helm delete --help
            exit
            ;;
        --namespace)
            NAMESPACE_ARG="$1 $2"
            shift
            ;;
        --timeout)
            TIMEOUT_ARG="$1 $2"
            shift
            ;;
        ?*)
            HELM_ARGS="$HELM_ARGS $1"
            ;;
        *)
            break
    esac
    shift
done

set -e

if helm-exists $RELEASE $NAMESPACE_ARG; then
    exec helm delete $RELEASE $NAMESPACE_ARG $TIMEOUT_ARG $HELM_ARGS
fi
